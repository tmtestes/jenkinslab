// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
                agent {
                    label 'master'
                }
                steps {
                    echo 'Building..'
                }
            }
        stage('Testing with Charles') {
            agent {
                label 'w10_lab'
            }
            steps {
                bat 'build/charles.bat'
                echo 'Testing..'
            }
        }        
        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                echo 'Deploying....'
                checkout scm
            }
        }

    }
    post {
        success {
            emailext (
                        body: ${FILE,path="success.html"} 
                      , attachmentsPattern: '**/*.png'
                      , attachLog: true
                      , from: env.DEFAULT_REPLYTO
                      , replyTo: env.DEFAULT_REPLYTO
                      , subject: 'Pipeline results'
                      , to: 'mauricio.freire@tmtestes.com.br'
                      )
        
        
        }
        failure {
            emailext (
                        body: ${FILE,path="failure.html"} 
                      , attachmentsPattern: '**/*.png'
                      , attachLog: true
                      , from: env.DEFAULT_REPLYTO
                      , replyTo: env.DEFAULT_REPLYTO
                      , subject: 'Pipeline results'
                      , to: 'mauricio.freire@tmtestes.com.br'
                    )
        
        }
    
    }
}
