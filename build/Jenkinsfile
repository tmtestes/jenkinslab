// Declarative //
pipeline {
    agent none
    environment {
        SUCCESS_BODY_MAIL = readFile 'build/success.html'
        FAIL_BODY_MAIL    = readFile 'build/success.html'
        REPLY_TO          = NULL
        MAIL_TO           = 'mauricio.freire@tmtestes.com.br'
    }
    stages {
        stage('Build') {
                agent {
                    label 'master'
                }
                steps {
                    echo 'Building..'
                }
            post {
                success {
                    emailext (
                        body:  env.SUCCESS_BODY_MAIL
                              , attachmentsPattern: '**/*.png'
                              , attachLog: true
                              , from: env.REPLY_TO
                              , replyTo: env.REPLY_TO
                              , subject: 'Pipeline results - SUCCESS'
                              , to: env.MAIL_TO
                              )


                }
                failure {
                    emailext (
                                body:  env.FAIL_BODY_MAIL
                              , attachmentsPattern: '**/*.png'
                              , attachLog: true
                              , from: env.REPLY_TO
                              , replyTo: env.REPLY_TO
                              , subject: 'Pipeline results - FAIL'
                              , to: env.MAIL_TO
                            )

                    }
            }            
            }
        stage('Testing with Charles') {
            agent {
                label 'w10_lab'
            }
            steps {
                bat 'build/charles.bat'
                echo 'Testing..'
            }
           
        }        
        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                echo 'Deploying....'
                checkout scm
            }
        }
    }
   
}
