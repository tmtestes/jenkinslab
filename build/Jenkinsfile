// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
                agent {
                    label 'master'
                }
                steps {
                    echo 'Building..'
                }
            }
        stage('Testing with Charles') {
            agent {
                label 'w10_lab'
            }
            steps {
                bat 'build/charles.bat'
                echo 'Testing..'
                emailext (
                        body: '<html><h2>Teste finalizado com sucesso</h2></html>',
                      , attachmentsPattern: '**/*.png',
                      , attachLog: true
                      , from: env.DEFAULT_REPLYTO,
                      , replyTo: env.DEFAULT_REPLYTO,
                      , subject: 'Pipeline results',
                      , to: 'mauricio.freire@tmtestes.com.br''
                   )
            }
        }        
        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                echo 'Deploying....'
                checkout scm
            }
        }

    }
}
