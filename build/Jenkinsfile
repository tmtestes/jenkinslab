// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
                agent {
                    label 'master'
                }
                steps {
                    echo 'Building..'
                }
            }
        stage('Testing with Charles') {
            agent {
                label 'w10_lab'
            }
            steps {
                bat 'build/charles.bat'
                echo 'Testing..'
            }
        }        
        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                echo 'Deploying....'
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [], 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[]]
                ])
            }
        }

    }
}
