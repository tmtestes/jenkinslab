// Declarative //
pipeline {
    agent none
    stages {
        stage('Build') {
                agent {
                    label 'master'
                }
                steps {
                    echo 'Building..'
                }
            }
        stage('Testing with Charles') {
            agent {
                label 'w10_lab'
            }
            steps {
                bat 'build/charles.bat'
                echo 'Testing..'
                emailext attachLog: true, body: '<html><h2>Teste finalizado com sucesso</h2></html>', subject: 'Pipeline', from: 'jenkins@tmtestes.com.br',to: 'mauricio.freire@tmtestes.com.br'
            }
        }        
        stage('Deploy') {
            agent {
                label 'master'
            }
            steps {
                echo 'Deploying....'
                checkout scm
            }
        }

    }
}
